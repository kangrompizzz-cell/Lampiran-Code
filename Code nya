    <div class="row">
        <div class="col-md-4">
            <div class="card">
                @if($buku->cover)
                    <img src="{{ asset('storage/' . $buku->cover) }}" 
                         class="card-img-top" alt="{{ $buku->judul }}">
                @else
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                         style="height: 400px;">
                        <i class="bi bi-book text-muted" style="font-size: 8rem;"></i>
                    </div>
                @endif
                <div class="card-body text-center">
                    <a href="{{ route('buku.download', $buku->id) }}" 
                       class="btn btn-primary btn-lg w-100 mb-2">
                        <i class="bi bi-download"></i> Download Buku
                    </a>
                    <div class="d-flex justify-content-center gap-2">
                        <a href="{{ route('buku.edit', $buku->id) }}" 
                           class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <form action="{{ route('buku.destroy', $buku->id) }}" method="POST">
                            @csrf
                            @method('DELETE')
                            <button type="submit" 
                                    class="btn btn-danger"
                                    onclick="return confirm('Hapus buku ini?')">
                                <i class="bi bi-trash"></i> Hapus
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">{{ $buku->judul }}</h1>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p><strong><i class="bi bi-person"></i> Penulis:</strong><br>
                            {{ $buku->penulis }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong><i class="bi bi-building"></i> Penerbit:</strong><br>
                            {{ $buku->penerbit }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong><i class="bi bi-calendar"></i> Tahun Terbit:</strong><br>
                            {{ $buku->tahun_terbit }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong><i class="bi bi-download"></i> Total Download:</strong><br>
                            {{ $buku->jumlah_download }}</p>
                        </div>
                    </div>
                    
                    <h4>Deskripsi Buku</h4>
                    <p class="card-text">{{ $buku->deskripsi ?? 'Tidak ada deskripsi' }}</p>
                    
                    <hr>
                    
                    <div class="d-flex justify-content-between">
                        <small class="text-muted">
                            <i class="bi bi-clock"></i> Ditambahkan: 
                            {{ $buku->created_at->format('d M Y H:i') }}
                        </small>
                        <small class="text-muted">
                            <i class="bi bi-arrow-clockwise"></i> Terakhir diupdate: 
                            {{ $buku->updated_at->format('d M Y H:i') }}
                        </small>
                    </div>
                </div>
            </div>
            
            <div class="mt-3">
                <a href="{{ route('buku.index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Kembali ke Daftar Buku
                </a>
            </div>
        </div>
    </div>
</div>
@endsection
