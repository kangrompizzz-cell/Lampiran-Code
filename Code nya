code BukuController

<?php
// app/Http/Controllers/BukuController.php

namespace App\Http\Controllers;

use App\Models\Buku;
use Illuminate\Http\Request;
use Illuminate\Support\Facades\Storage;

class BukuController extends Controller
{
    public function index()
    {
        $bukus = Buku::all();
        return view('buku.index', compact('bukus'));
    }

    public function create()
    {
        return view('buku.create');
    }

    public function store(Request $request)
    {
        $request->validate([
            'judul' => 'required|string|max:255',
            'penulis' => 'required|string|max:255',
            'penerbit' => 'required|string|max:255',
            'tahun_terbit' => 'required|integer|min:1900|max:' . date('Y'),
            'deskripsi' => 'nullable|string',
            'cover' => 'nullable|image|mimes:jpeg,png,jpg,gif|max:2048',
            'file_buku' => 'required|file|mimes:pdf,doc,docx,epub|max:51200',
        ]);

        $data = $request->all();

        // Upload cover
        if ($request->hasFile('cover')) {
            $coverPath = $request->file('cover')->store('covers', 'public');
            $data['cover'] = $coverPath;
        }

        // Upload file buku
        if ($request->hasFile('file_buku')) {
            $filePath = $request->file('file_buku')->store('buku_files', 'public');
            $data['file_buku'] = $filePath;
        }

        Buku::create($data);

        return redirect()->route('buku.index')
            ->with('success', 'Buku berhasil ditambahkan!');
    }

    public function show(Buku $buku)
    {
        return view('buku.show', compact('buku'));
    }

    public function edit(Buku $buku)
    {
        return view('buku.edit', compact('buku'));
    }

    public function update(Request $request, Buku $buku)
    {
        $request->validate([
            'judul' => 'required|string|max:255',
            'penulis' => 'required|string|max:255',
            'penerbit' => 'required|string|max:255',
            'tahun_terbit' => 'required|integer|min:1900|max:' . date('Y'),
            'deskripsi' => 'nullable|string',
            'cover' => 'nullable|image|mimes:jpeg,png,jpg,gif|max:2048',
            'file_buku' => 'nullable|file|mimes:pdf,doc,docx,epub|max:51200',
        ]);

        $data = $request->all();

        // Update cover jika ada
        if ($request->hasFile('cover')) {
            // Hapus cover lama
            if ($buku->cover) {
                Storage::disk('public')->delete($buku->cover);
            }
            $coverPath = $request->file('cover')->store('covers', 'public');
            $data['cover'] = $coverPath;
        }

        // Update file buku jika ada
        if ($request->hasFile('file_buku')) {
            // Hapus file lama
            if ($buku->file_buku) {
                Storage::disk('public')->delete($buku->file_buku);
            }
            $filePath = $request->file('file_buku')->store('buku_files', 'public');
            $data['file_buku'] = $filePath;
        }

        $buku->update($data);

        return redirect()->route('buku.index')
            ->with('success', 'Buku berhasil diperbarui!');
    }

    public function destroy(Buku $buku)
    {
        // Hapus file dari storage
        if ($buku->cover) {
            Storage::disk('public')->delete($buku->cover);
        }
        if ($buku->file_buku) {
            Storage::disk('public')->delete($buku->file_buku);
        }

        $buku->delete();

        return redirect()->route('buku.index')
            ->with('success', 'Buku berhasil dihapus!');
    }

    public function download(Buku $buku)
    {
        // Tambah jumlah download
        $buku->increment('jumlah_download');
        
        $filePath = storage_path('app/public/' . $buku->file_buku);
        
        return response()->download($filePath, $buku->judul . '.' . pathinfo($filePath, PATHINFO_EXTENSION));
    }
}

